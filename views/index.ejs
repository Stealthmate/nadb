<html lang="en-US">

	<head>

		<meta charset="utf-8">
		
		</meta>
	
		<title>Shippuuden-Arena</title>
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		
		<script type="text/javascript" src="resource/scripts/queryUpdate.js"> </script>
		<script type="text/javascript" src="resource/scripts/characterinfo.js"> </script>
		
		<link rel="stylesheet" type="text/css" href="resource/styles/style_index.css">
		<link rel="stylesheet" type="text/css" href="resource/styles/infopane.css">
		<link rel="stylesheet" type="text/css" href="resource/styles/ability.css">
		
	</head>

	
	<body onkeydown="onKeyDown();">
		<div id="searchpane">
			<form style="margin-bottom: 1px;">
				<input 
				id="searchbox" 
				name="characterQuery" 
				type="text" 
				autocomplete="off"
				placeholder="Character name"
				oninput    = "updateSuggestions();"></input>
			</form>
			
			<ol id="resultlist">
			</ol>
		</div>
		
		<div id="character_pane">
		
			<div class="characterinfo">
				
				<div class="header">
					
					<img class="icon" src=""></img>
					
					<div class="headertext">
						<div class="name"></div>
					
				</div>
					
				</div>
				
				<div class="description"></div>
			
			</div>
			<% for(var i=1; i<=4; i++) { %>
			<div class="ability" id="ab<%= i%>">
				<div class="header">
					<img class="icon" src=""></img>
						
					<div class="headertext">
						<div class="name">
							<!--<button onclick="switchAbility(<%= i-1%>);" class="alternate" type="button" disabled>Alt</button>-->
							<span class="namse"></span>
						</div>
						
						<span class="label">Cost:</span>
						<table class="cost">
							<tr>
							</tr>
						</table>
						
						<div class="cd"><span class="label">Cooldown: </span><span class="value"></span></div>
						<br />
					</div>
						
					<div class="classes">
						<table>
							<tr>
								<img class="abilityclass" data-active="false" id="physical" src="resource/images/icon_physical.png"></img>
								<img class="abilityclass" data-active="false" id="melee" src="resource/images/icon_melee.png"></img>
								<img class="abilityclass" data-active="false" id="action" src="resource/images/icon_action.png"></img>
								<img class="abilityclass" data-active="false" id="affliction" src="resource/images/icon_affliction.png"></img>
								<img class="abilityclass" data-active="false" id="instant" src="resource/images/icon_instant.png"></img>
							</tr>
							<tr>
								<img class="abilityclass" data-active="false" id="chakra" src="resource/images/icon_chakra.png"></img>
								<img class="abilityclass" data-active="false" id="ranged" src="resource/images/icon_ranged.png"></img>
								<img class="abilityclass" data-active="false" id="mental" src="resource/images/icon_mental.png"></img>
								<img class="abilityclass" data-active="false" id="unique" src="resource/images/icon_unique.png"></img>
								<img class="abilityclass" data-active="false" id="control" src="resource/images/icon_control.png"></img>
							</tr>
						</table>
					</div>
				</div>
				<div class="description"></div>
			</div>
			<% } %>
		
		</div>
	
	</body>
</html>